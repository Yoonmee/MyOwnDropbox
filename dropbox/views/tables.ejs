<!DOCTYPE html>
<html lang="en">

<head>


      <% include ./head.ejs %>

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
          <% include ./header.ejs %>
          <% include ./navigator.ejs %>
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">My Own Dropbox</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                  <div class="panel-body">
                  <div style="margin-right:20px;" align="right">
                    <form role="form" action="/make_folder" method="post">
                      <input class="form-control" placeholder="foldername" style="margin-right:10px;" name="foldername">
                      <button type="submit" class="btn btn-default" style="margin-right:10px;">폴더 생성</button>

                      <a href="download" class="btn btn-default" style="margin-right:10px;">다운로드</a>
                      <a href="upload" class="btn btn-default">업로드</a>
                    </form>
                  </div>
                </div>

                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>파일 선택</th>
                                        <th>이름</th>
                                        <th>크기</th>
                                        <th>수정된 날짜</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  <% file.forEach(function(f){ %>
                                    <tr class="odd gradeX">
                                        <td><input type="checkbox" value=""></td>
                                        <td><%= f.Key %></td>
                                        <td><%= f.Size %> Byte</td>
                                        <td><%= f.LastModified %></td>

                                    </tr>
                                    <% }) %>

                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->

                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->


        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
  <% include ./footer.ejs %>
  <script>
      $(document).ready(function() {
          $('#dataTables-example').DataTable({
              responsive: true
          });
      });
      </script>

</body>

</html>
